.markdown-body {
    box-sizing: border-box;
    min-width: 200px;
    max-width: 980px;
    margin: 0 auto;
    padding: 45px;
}

#post-title {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

#post-time {
    font-size: 14px;
    color: gray;
    font-weight: normal;
}

#page-prev-next {
    box-sizing: border-box;
    min-width: 200px;
    max-width: 980px;
    margin: 0 auto;
    padding: 0 45px 0 45px;
    display: flex;
    justify-content: space-between;
}

#page-prev-next a {
    font-family: theme_font_family;
    color: theme_color;
    font-size: 17px;
}


